@page
@model LabProject.Pages.IndexModel
@{
    ViewData["Title"] = "Class Information";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-4">Class Information</h1>
        </div>
        <div class="col-auto">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addClassModal">
                <i class="bi bi-plus-circle"></i> Add New Class
            </button>
        </div>
    </div>

    <!-- Filter Form -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label for="classNameFilter" class="form-label">Class Name</label>
                    <input type="text" class="form-control" id="classNameFilter" name="classNameFilter" value="@Model.ClassNameFilter">
                </div>
                <div class="col-md-3">
                    <label for="minStudentCount" class="form-label">Min Students</label>
                    <input type="number" class="form-control" id="minStudentCount" name="minStudentCount" value="@Model.MinStudentCount">
                </div>
                <div class="col-md-3">
                    <label for="maxStudentCount" class="form-label">Max Students</label>
                    <input type="number" class="form-control" id="maxStudentCount" name="maxStudentCount" value="@Model.MaxStudentCount">
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">Filter</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Export Form -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3" id="exportForm">
                <div class="col-md-12 d-flex justify-content-between align-items-center">
                    <div>
                        <!-- Butonlar kaldırıldı -->
                    </div>
                    <button type="button" class="btn btn-success" onclick="exportSelected()">
                        <i class="bi bi-download"></i> Export Selected to JSON
                    </button>
                </div>
                <input type="hidden" name="selectedIds" id="selectedIds" />
                <input type="hidden" name="exportAll" id="exportAll" value="false" />
                <input type="hidden" name="exportColumn" id="exportColumn" />
            </form>
        </div>
    </div>

    <!-- Add Class Form -->
    <!-- Test için eklenen form kaldırıldı -->

    <!-- Class Table -->
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Person Count</th>
                            <th>Description</th>
                            <th>Is Active</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var classInfo in Model.Classes)
                        {
                            <tr>
                                <td>@classInfo.Name</td>
                                <td>@classInfo.PersonCount</td>
                                <td>@classInfo.Description</td>
                                <td>@(classInfo.IsActive ? "Yes" : "No")</td>
                                <td>
                                    <button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#editClassModal" 
                                            data-id="@classInfo.Id" data-name="@classInfo.Name" 
                                            data-count="@classInfo.PersonCount" data-desc="@classInfo.Description" data-active="@classInfo.IsActive">
                                        <i class="bi bi-pencil"></i> Edit
                                    </button>
                                    <form method="post" asp-page-handler="Delete" asp-route-id="@classInfo.Id" style="display:inline;">
                                        <button type="submit" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i> Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @if (Model.TotalPages > 1)
            {
                <nav aria-label="Page navigation" class="mt-4">
                    <ul class="pagination justify-content-center">
                        @if (Model.CurrentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" href="?currentPage=@(Model.CurrentPage - 1)&classNameFilter=@Model.ClassNameFilter&minStudentCount=@Model.MinStudentCount&maxStudentCount=@Model.MaxStudentCount&sortBy=@Model.SortBy&sortOrder=@Model.SortOrder">
                                    <i class="bi bi-chevron-left"></i>
                                </a>
                            </li>
                        }
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" href="?currentPage=@i&classNameFilter=@Model.ClassNameFilter&minStudentCount=@Model.MinStudentCount&maxStudentCount=@Model.MaxStudentCount&sortBy=@Model.SortBy&sortOrder=@Model.SortOrder">@i</a>
                            </li>
                        }
                        @if (Model.CurrentPage < Model.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" href="?currentPage=@(Model.CurrentPage + 1)&classNameFilter=@Model.ClassNameFilter&minStudentCount=@Model.MinStudentCount&maxStudentCount=@Model.MaxStudentCount&sortBy=@Model.SortBy&sortOrder=@Model.SortOrder">
                                    <i class="bi bi-chevron-right"></i>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>

<!-- Add Class Modal -->
@if (TempData["AddError"] != null)
{
    <div class="alert alert-danger">@TempData["AddError"]</div>
}
<div class="modal fade" id="addClassModal" tabindex="-1" aria-labelledby="addClassModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="Add">
                <div class="modal-header">
                    <h5 class="modal-title" id="addClassModalLabel">Add New Class</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label asp-for="NewClass.Name" class="form-label"></label>
                        <input asp-for="NewClass.Name" class="form-control" required />
                        <span asp-validation-for="NewClass.Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="NewClass.PersonCount" class="form-label"></label>
                        <input asp-for="NewClass.PersonCount" class="form-control" required />
                        <span asp-validation-for="NewClass.PersonCount" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="NewClass.Description" class="form-label"></label>
                        <textarea asp-for="NewClass.Description" class="form-control"></textarea>
                        <span asp-validation-for="NewClass.Description" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="NewClass.IsActive" class="form-label"></label>
                        <input asp-for="NewClass.IsActive" type="checkbox" />
                        <span asp-validation-for="NewClass.IsActive" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Add Class</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Class Modal -->
<div class="modal fade" id="editClassModal" tabindex="-1" aria-labelledby="editClassModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="Edit">
                <div class="modal-header">
                    <h5 class="modal-title" id="editClassModalLabel">Edit Class</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" asp-for="EditClass.Id" id="editClassId" />
                    <div class="mb-3">
                        <label asp-for="EditClass.Name" class="form-label"></label>
                        <input asp-for="EditClass.Name" class="form-control" id="editClassName" required />
                        <span asp-validation-for="EditClass.Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="EditClass.PersonCount" class="form-label"></label>
                        <input asp-for="EditClass.PersonCount" class="form-control" id="editClassCount" required />
                        <span asp-validation-for="EditClass.PersonCount" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="EditClass.Description" class="form-label"></label>
                        <textarea asp-for="EditClass.Description" class="form-control" id="editClassDesc"></textarea>
                        <span asp-validation-for="EditClass.Description" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="EditClass.IsActive" class="form-label"></label>
                        <input asp-for="EditClass.IsActive" type="checkbox" id="editClassActive" />
                        <span asp-validation-for="EditClass.IsActive" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        var editModal = document.getElementById('editClassModal');
        editModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            document.getElementById('editClassId').value = button.getAttribute('data-id');
            document.getElementById('editClassName').value = button.getAttribute('data-name');
            document.getElementById('editClassCount').value = button.getAttribute('data-count');
            document.getElementById('editClassDesc').value = button.getAttribute('data-desc');
            document.getElementById('editClassActive').checked = (button.getAttribute('data-active') === 'True' || button.getAttribute('data-active') === 'true');
        });
    </script>
}
