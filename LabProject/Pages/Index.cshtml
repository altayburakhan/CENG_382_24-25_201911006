@page
@model IndexModel
@{
    ViewData["Title"] = "Class Information";
}

<div class="container mt-4">
    <div class="row">
        <!-- Filter Form -->
        <div class="col-md-3">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Filters</h5>
                </div>
                <div class="card-body">
                    <form method="get" class="filter-form">
                        <div class="form-group">
                            <label for="classNameFilter" class="form-label">Class Name</label>
                            <input type="text" class="form-control" id="classNameFilter" name="classNameFilter" 
                                   value="@Model.ClassNameFilter" placeholder="Search by class name">
                        </div>
                        <div class="form-group">
                            <label for="minStudentCount" class="form-label">Min Student Count</label>
                            <input type="number" class="form-control" id="minStudentCount" name="minStudentCount" 
                                   value="@Model.MinStudentCount" min="0">
                        </div>
                        <div class="form-group">
                            <label for="maxStudentCount" class="form-label">Max Student Count</label>
                            <input type="number" class="form-control" id="maxStudentCount" name="maxStudentCount" 
                                   value="@Model.MaxStudentCount" min="0">
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Apply Filters</button>
                    </form>
                </div>
            </div>

            <!-- Add Class Form -->
            <div class="card mt-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">Add New Class</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            <label asp-for="NewClass.ClassName" class="form-label">Class Name</label>
                            <input asp-for="NewClass.ClassName" class="form-control" required>
                            <span asp-validation-for="NewClass.ClassName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NewClass.StudentCount" class="form-label">Student Count</label>
                            <input asp-for="NewClass.StudentCount" class="form-control" type="number" min="1" max="100" required>
                            <span asp-validation-for="NewClass.StudentCount" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NewClass.Description" class="form-label">Description</label>
                            <textarea asp-for="NewClass.Description" class="form-control" required></textarea>
                            <span asp-validation-for="NewClass.Description" class="text-danger"></span>
                        </div>
                        <button type="submit" asp-page-handler="Add" class="btn btn-primary w-100">Add Class</button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Class Table -->
        <div class="col-md-9">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Class List</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.Classes[0].ClassName)</th>
                                    <th>@Html.DisplayNameFor(model => model.Classes[0].StudentCount)</th>
                                    <th>@Html.DisplayNameFor(model => model.Classes[0].Description)</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Classes)
                                {
                                    <tr>
                                        <td>@item.ClassName</td>
                                        <td>@item.StudentCount</td>
                                        <td>@item.Description</td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-page="./Index" asp-route-editId="@item.Id" class="btn btn-primary btn-sm">Edit</a>
                                                <form method="post" class="d-inline">
                                                    <input type="hidden" name="id" value="@item.Id" />
                                                    <button type="submit" asp-page-handler="Delete" class="btn btn-danger btn-sm" 
                                                            onclick="return confirm('Are you sure you want to delete this class?')">
                                                        Delete
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    @if (Model.TotalPages > 1)
                    {
                        <nav aria-label="Page navigation">
                            <ul class="pagination justify-content-center">
                                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                    <a class="page-link" asp-route-currentPage="@(Model.CurrentPage - 1)"
                                       asp-route-classNameFilter="@Model.ClassNameFilter"
                                       asp-route-minStudentCount="@Model.MinStudentCount"
                                       asp-route-maxStudentCount="@Model.MaxStudentCount">Previous</a>
                                </li>
                                @for (int i = 1; i <= Model.TotalPages; i++)
                                {
                                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                        <a class="page-link" asp-route-currentPage="@i"
                                           asp-route-classNameFilter="@Model.ClassNameFilter"
                                           asp-route-minStudentCount="@Model.MinStudentCount"
                                           asp-route-maxStudentCount="@Model.MaxStudentCount">@i</a>
                                    </li>
                                }
                                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                                    <a class="page-link" asp-route-currentPage="@(Model.CurrentPage + 1)"
                                       asp-route-classNameFilter="@Model.ClassNameFilter"
                                       asp-route-minStudentCount="@Model.MinStudentCount"
                                       asp-route-maxStudentCount="@Model.MaxStudentCount">Next</a>
                                </li>
                            </ul>
                        </nav>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Edit Modal -->
@if (Model.EditingClass != null)
{
    <div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editModalLabel">Edit Class</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form method="post">
                    <div class="modal-body">
                        <input type="hidden" asp-for="EditingClass.Id" />
                        <div class="form-group">
                            <label asp-for="EditingClass.ClassName" class="form-label">Class Name</label>
                            <input asp-for="EditingClass.ClassName" class="form-control" required>
                            <span asp-validation-for="EditingClass.ClassName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EditingClass.StudentCount" class="form-label">Student Count</label>
                            <input asp-for="EditingClass.StudentCount" class="form-control" type="number" min="1" max="100" required>
                            <span asp-validation-for="EditingClass.StudentCount" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EditingClass.Description" class="form-label">Description</label>
                            <textarea asp-for="EditingClass.Description" class="form-control" required></textarea>
                            <span asp-validation-for="EditingClass.Description" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" asp-page-handler="Edit" class="btn btn-primary">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

@section Scripts {
    @if (Model.EditingClass != null)
    {
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                var editModal = new bootstrap.Modal(document.getElementById('editModal'));
                editModal.show();
            });
        </script>
    }
}
