@page
@model IndexModel
@{
    ViewData["Title"] = "Class Information";
}

<div class="container-fluid">
    <div class="row">
        <!-- Left side - Form -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">@(Model.EditingClass != null ? "Edit Class" : "Add New Class")</h3>
                </div>
                <div class="card-body">
                    @if (Model.EditingClass != null)
                    {
                        <form method="post" asp-page-handler="Edit">
                            <input type="hidden" asp-for="EditingClass.Id" />
                            <div class="mb-3">
                                <label asp-for="EditingClass.ClassName" class="form-label">Class Name</label>
                                <input asp-for="EditingClass.ClassName" class="form-control" required>
                                <span asp-validation-for="EditingClass.ClassName" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="EditingClass.StudentCount" class="form-label">Student Count</label>
                                <input asp-for="EditingClass.StudentCount" class="form-control" type="number" required>
                                <span asp-validation-for="EditingClass.StudentCount" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="EditingClass.Description" class="form-label">Description</label>
                                <textarea asp-for="EditingClass.Description" class="form-control" rows="3" required></textarea>
                                <span asp-validation-for="EditingClass.Description" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary">Update Class</button>
                            <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
                        </form>
                    }
                    else
                    {
                        <form method="post" asp-page-handler="Add">
                            <div class="mb-3">
                                <label asp-for="NewClass.ClassName" class="form-label">Class Name</label>
                                <input asp-for="NewClass.ClassName" class="form-control" required>
                                <span asp-validation-for="NewClass.ClassName" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="NewClass.StudentCount" class="form-label">Student Count</label>
                                <input asp-for="NewClass.StudentCount" class="form-control" type="number" min="1" max="100" required>
                                <span asp-validation-for="NewClass.StudentCount" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="NewClass.Description" class="form-label">Description</label>
                                <textarea asp-for="NewClass.Description" class="form-control" rows="3" required></textarea>
                                <span asp-validation-for="NewClass.Description" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary">Add Class</button>
                        </form>
                    }
                </div>
            </div>
        </div>

        <!-- Right side - Table -->
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Class List</h3>
                </div>
                <div class="card-body">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Class Name</th>
                                <th>Student Count</th>
                                <th>Description</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var classInfo in Model.Classes)
                            {
                                <tr>
                                    <td>@classInfo.Id</td>
                                    <td>@classInfo.ClassName</td>
                                    <td>@classInfo.StudentCount</td>
                                    <td>@classInfo.Description</td>
                                    <td>
                                        <a asp-page="./Index" asp-route-editId="@classInfo.Id" class="btn btn-sm btn-warning">Edit</a>
                                        <form method="post" asp-page-handler="Delete" asp-route-id="@classInfo.Id" style="display: inline;">
                                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this class?')">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
